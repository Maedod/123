        ),
        
        dateInput(
          inputId = 'dtInput',
          label = tags$span(style = "color: red;", "Date"),
          value = Sys.Date(),
        ),
        pickerInput(
          inputId = "numPeopleInput",
          label = tags$span(style = "color: red;", "Number of People"), 
          choices = c("1", "2", "3", "4","5","6"),
          selected = "1",
        ),
        actionButton(
          inputId = "submitRes",
          label = "Submit Reservation",
          style = "simple",
          color = "primary",
          size = "md"
        )
      )
    }
  )
  
  
  observeEvent(
    input$submitRes,
    {
      sendSweetAlert(
        session = session,
        title = 'Confirmed!',
        text = paste0(
          'Your reservation for ',
          input$numPeopleInput, 
          ' on ',
          input$dtInput,
          ' ',
          input$tmInput,
          ' at ',
          input$attInput,
          ' is confirmed. See you soon!'
        ),
        type = 'success'
      )
      di$re <- 0
    }
  )
  
  # ui for booking
  output$uiBooking <- renderUI({
    if (ho$pg == 8) {
      # Get the accommodation data from the database
      accommodation_data <- dbGetQuery(con, "SELECT room_type, bed_type, price_pn FROM accommodation")
      
      fluidPage(
        fluidRow(
          column(
            width = 6,
            style = 'padding:10vh 10% 0 10%;',
            h3(
              style = 'color:white;',
              'Make a booking'
            ),
            br(),
            tags$form(
              action = '/submit_booking',
              method = 'post',
              div(
                class = 'form-group',
                selectInput(
                  inputId = 'room_type',
                  label = 'Room type',
                  choices = accommodation_data$room_type,
                  selected = NULL
                )
              ),
              div(
                class = 'form-group',
                selectInput(
                  inputId = 'bed_type',
                  label = 'Bed type',
                  choices = accommodation_data$bed_type,
                  selected = NULL
                )
              ),
              div(
                class = 'form-group',
                textInput(
                  inputId = 'check_in',
                  label = 'Check-in date',
                  value = NULL
                )
              ),
              div(
                class = 'form-group',
                textInput(
                  inputId = 'check_out',
                  label = 'Check-out date',
                  value = NULL
                )
              ),
              div(
                class = 'form-group',
                submitButton('Book now')
              )
            )
          ),
          column(
            width = 6,
            style = 'padding:10vh 10% 0 10%;',
            h3(
              style = 'color:white;',
              'Current Bookings'
            ),
            br(),
            tableOutput('booking_table')
          )
        )
      )
    }
  })
  
  # booking
  observeEvent(input$submit_booking, {
    # Get the input values
    room_type <- input$room_type
    bed_type <- input$bed_type
    check_in <- input$check_in
    check_out <- input$check_out
    
    # Retrieve the updated accommodation data from the database
    accommodation_data <- dbGetQuery(con, "SELECT room_type,bed_type,price_pn FROM accomodation")
    
    # Render a table with the accommodation data
    output$booking_table <- renderTable({
      accommodation_data
    })
    
    # Display a message to confirm the booking
    showModal(
      modalDialog(
        title = 'Booking confirmed',
        'Thank you for your booking!'
      )
    )
  })
}
