
server <- function(input, output, session) {
  
  con <- dbConnect(
    drv = dbDriver('Postgres'),
    dbname = 'hotel23a_06',
    host = 'db-postgresql-nyc1-44203-do-user-8018943-0.b.db.ondigitalocean.com',
    port = 25061,
    user = 'proj23a_06',
    password = 'AVNS_Ufz0tab6d2J7Her7QYD'
  )
  
  # reactive values----
  ho <- reactiveValues(
