  # _hotel map----
  output$hotMap <- renderLeaflet(
    {
      leaflet() %>% 
        addTiles() %>% 
        addMarkers(
          lat = hlat,
          lng = hlng
        ) %>% 
        setView(
          lat = hlat,
          lng = hlng,
          zoom = 15
        )
