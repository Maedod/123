              )
            ),
            column(
              width = 4,
              img(
                src = 'icon_time.png',
                width = '25%'
              ),
              br(),
              br(),
              pickerInput(
                inputId = 'tmInput',
                label = NULL,
                choices = c(paste0(12:23, ':00')),
