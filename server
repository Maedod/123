  # function to change look of tab when selected
  tabBttn <- function(i) {
    t <- actionBttn(
      inputId = ti[i],
      label = tl[i],
      style = ifelse(ho$pg == i, 'simple', 'stretch'),
      color = ifelse(ho$pg == i, 'default', 'default'),
