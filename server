            align = 'center',
            style = 'padding:20vh 0 10px 0;',
            actionBttn(
              inputId = 'home1',
              label = '<',
              style = 'jelly',
              color = 'default',
              size = 'sm'
            ),
            actionBttn(
              inputId = 'home2',
              label = '>',
              style = 'jelly',
              color = 'default',
              size = 'sm'
            )
          )
        ),
        tags$style(
          HTML("
          .video-container {
            width: 100%;
            float: left;
            margin-right: 10px;
          }
          .content {
            width: 35%;
            float: right;
          }
